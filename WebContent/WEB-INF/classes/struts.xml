<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.action.extension" value="cmd" />

	<package name="default" namespace="/www" extends="json-default">
		<global-results>
			<result type="json">
				<param name="ignoreHierarchy">false</param>
				<param name="excludeNullProperties">true</param>
			</result>
			<result name="error">result.jsp</result>
			<result name="finish">result.jsp</result>
			<result name="input">result.jsp</result>
			<result name="login">index.html</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>

		<!-- User -->
		<action name="userLogin" class="UserAction" method="userLogin" />
		<action name="obtainMod" class="UserAction" method="obtainMod" />
		<action name="obtainUsers" class="UserAction" method="obtainUsers" />
		<action name="saveUser" class="UserAction" method="saveUser" />
	</package>
</struts>
